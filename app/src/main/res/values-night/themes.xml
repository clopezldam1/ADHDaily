<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ADHDaily" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue3</item>
        <item name="colorPrimaryVariant">@color/blue4</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue4</item>
        <item name="colorSecondaryVariant">@color/blue5dark</item>
        <item name="colorOnSecondary">@color/blue1</item>
        <item name="colorSecondaryContainer">@color/transparent</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/blue2</item>
        <!-- Higlight color-->
        <item name="colorAccent">@color/blue3</item>
        <item name="colorControlActivated">@color/blue3</item>
        <item name="colorControlHighlight">@color/blue3</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">?attr/colorSecondaryVariant</item>

        <!-- View bg color -->
        <item name="android:windowBackground">?attr/colorSecondaryVariant</item>

        <!-- Color texto y vectores de view -->
        <item name="android:textColor">?attr/colorOnSecondary</item>

        <!-- tipo de letra -->
        <item name="android:fontFamily">monospace</item>

        <!-- Customize your theme here. -->
    </style>
</resources>
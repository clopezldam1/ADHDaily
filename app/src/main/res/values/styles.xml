<resources>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:windowBackground">?attr/colorSecondaryVariant</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColorPrimary">?attr/colorOnSecondary</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:datePickerDialogTheme">@style/Theme.ADHDaily</item>
    </style>

    <style name="rippleEffectImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/click_ripple_effect_imagebutton</item>
    </style>

    <style name="rippleEffectButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/click_ripple_effect_imagebutton</item>
    </style>

    <style name="rippleEffectTextViewNoBg" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/click_ripple_effect_textview</item>
    </style>

</resources>
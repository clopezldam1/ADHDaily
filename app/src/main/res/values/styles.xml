<resources>
    <style name="CustomDialogTheme1" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="SpinnerDropDownStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:windowBackground">?attr/colorSecondaryVariant</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColorPrimary">?attr/colorOnSecondary</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:datePickerDialogTheme">@style/Theme.ADHDaily</item>
    </style>

    <style name="CustomTimePickerDialogTheme" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:windowBackground">?attr/colorSecondaryVariant</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColorPrimary">?attr/colorOnSecondary</item>
        <item name="colorAccent">?attr/colorPrimaryVariant</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
        <item name="android:colorForeground">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:foregroundTint">?attr/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:timePickerDialogTheme">@style/Theme.ADHDaily</item>
    </style>

    <style name="rippleEffectTextViewNoBg1" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/click_ripple_effect_nobg_1</item>
    </style>

    <style name="rippleEffectTextViewNoBg2" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/click_ripple_effect_nobg_2</item>
    </style>

</resources>
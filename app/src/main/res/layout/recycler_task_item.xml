<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/taskItemContainerListDayView"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="7"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="7dp"
    app:contentPadding="10dp"
    android:background="@drawable/click_ripple_effect_nobg_2"
    android:alpha="1">

    <CheckBox
        android:id="@+id/checkbox_completeTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/txt_timeStartTask"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.75"
        android:gravity="center"
        android:inputType="text"
        android:text="[03:00am]"
        android:textAlignment="center"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_titleTask"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center|start"
        android:text="Feed the cat and eat a lot of fruit and"
        android:textSize="16dp"
        android:paddingHorizontal="5dp"
        android:inputType="text"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>
